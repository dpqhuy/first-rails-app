<div class="container">
  <%= form_tag(articles_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <%= submit_tag "Search" %>
    </div>
  <% end %>
  <h1>Huy Dinh's Blog</h1>
  <h3>
    This is the Prework of Ruby on Rails Course!
  </h3>
  <% if @articles.present? %>
    <%= render @articles %>
  <% else %>
    <p>There are no title containing the term(s) <%= params[:search] %>.</p>
  <% end %>
  <br>

  <%= link_to 'New Article', new_article_path, class:'btn btn-primary' %>

</div>